#include <iostream>
using namespace std;

int main() {
int arr[7]={2,3,4,5,6,7,8};
int size = sizeof(arr)/sizeof(arr[0]);
int target;
cin >> target ;
int low =0;
int high= size -1;
int flag=-1;
int mid;
while (low<=high)
{
    mid =(high +low)/2;
    
    if (arr[mid] == target)
    {
        flag = mid;
        break ;
        
    }
    if ( arr[mid]< target)
    {
        low = mid +1;
        
    }
    else if (arr[mid]> target)
    {
        high = mid-1;
         
    }
}

if (flag==-1)
{
    cout << "element not found";
    
}
else 
{
    cout << "element found at index " << flag;
}
    return 0;
}

